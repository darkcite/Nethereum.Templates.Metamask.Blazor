@page "/my-profile"
@implements IDisposable
@inject SelectedEthereumHostProviderService SelectedHostProviderService
@using Marketplace.Wasm.Models
@using System.Numerics;
@using Nethereum.Web3
@using Marketplace.Shared;
@inject IJSRuntime JsRuntime
@inject Services.NFTService NftService

<AuthorizeView Roles="EthereumConnected">
    <Authorized Context="authContext">
        <div class="container py-4">
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label-lg">Selected Account:</label>
                <div class="col-sm-6">
                    @SelectedAccount
                    <small id="selectedAccountHelp" class="form-text text-muted">The selected account is bound to the host (ie Metamask) on change</small>
                </div>
            </div>
            @if (!isSeller)
            {
                <div class="row mb-3">
                    <div class="col-sm-12">
                        <h4>Become a seller on our marketplace</h4>
                        <button class="btn btn-primary" @onclick="BecomeSeller">Become</button>
                    </div>
                </div>
            }
            else
            {
                <div class="row mb-3">
                    <div class="col-sm-12">
                        <h4>Your Collection</h4>
                        <div>
                            <label>Collection Name:</label>
                            <input @bind="collectionName" />
                        </div>
                        <div>
                            <label>Logo:</label>
                            <InputFile OnChange="@((InputFileChangeEventArgs args) => UploadLogo(args))" />
                        </div>
                        <div>
                            <label>Banner:</label>
                            <InputFile OnChange="@((InputFileChangeEventArgs args) => UploadBanner(args))" />
                        </div>
                        <button class="btn btn-primary" @onclick="UpdateCollection">Update Collection</button>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-12">
                        <button class="btn btn-primary" @onclick="OpenMintTokenModal">Mint a Token</button>
                    </div>
                </div>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        <div>
            Please connect to Ethereum !
        </div>
    </NotAuthorized>
</AuthorizeView>

<MintTokenModal @ref="mintTokenModal" />

